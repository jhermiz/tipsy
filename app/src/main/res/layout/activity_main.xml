<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relativeLayout1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="48sp"
        android:id="@+id/billEditText"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="48sp"
        android:id="@+id/tipEditText"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:rating="5"
        android:stepSize="1"
        android:clickable="false"
        android:layout_below="@+id/serviceTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/service_text_view"
        android:id="@+id/serviceTextView"
        android:layout_below="@+id/billEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bill_text_view"
        android:id="@+id/textView2"
        android:layout_below="@+id/billEditText"
        android:layout_alignRight="@+id/serviceTextView"
        android:layout_alignEnd="@+id/serviceTextView"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tip_text_view"
        android:id="@+id/textView"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tipEditText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/finalTextView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        android:text="0.00"
        android:textSize="80sp"
        android:gravity="right"
        android:textColor="#ff006600" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/final_text_view"
        android:id="@+id/textView3"
        android:gravity="right"
        android:layout_alignBottom="@+id/finalTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
